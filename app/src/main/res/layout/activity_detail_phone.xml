<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_phone">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary" />
    <ImageView
        android:id="@+id/back"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="back"/>
    <TextView
        android:layout_toRightOf="@id/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:id="@+id/dtipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samsung Note 10"/>
    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="325dp"
        android:layout_height="305dp"
        android:background="@drawable/bgdetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/dimg"
            android:layout_width="199dp"
            android:layout_height="258dp"
            android:layout_centerInParent="true"
            android:src="@drawable/samsungnote10" />
    </RelativeLayout>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Detail"
        android:layout_below="@id/bg"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_below="@id/txt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="70dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/detaila">
                <TextView
                    android:id="@+id/lbel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Display"
                    android:layout_below="@id/lbel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6,5 Inc"
                    android:layout_marginLeft="55dp"
                    android:textColor="#000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/detailb">
                <TextView
                    android:id="@+id/lbel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Battery"
                    android:layout_below="@id/lbel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4000Mah"
                    android:layout_marginLeft="55dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="70dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/detailc">
                <TextView
                    android:id="@+id/lbel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ram"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Ram"
                    android:layout_below="@id/lbel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8Gb"
                    android:layout_marginLeft="55dp"
                    android:textColor="#000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/detaild">
                <TextView
                    android:id="@+id/lbel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chips"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Chips"
                    android:layout_below="@id/lbel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snapdragon 855"
                    android:layout_marginLeft="55dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="70dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/detailf">
                <TextView
                    android:id="@+id/lbel5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internal"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Internal"
                    android:layout_below="@id/lbel5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="124Gb"
                    android:layout_marginLeft="55dp"
                    android:textColor="#000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/detaile">
                <TextView
                    android:id="@+id/lbel6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamera"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/Kamera"
                    android:layout_below="@id/lbel6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12Mp"
                    android:layout_marginLeft="55dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>